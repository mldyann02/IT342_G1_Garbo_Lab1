<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AuthApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="materialButtonStyle">@style/Widget.AuthApp.Button</item>
    </style>

    <!-- Primary Button - Matching web btn-enroll style -->
    <style name="Widget.AuthApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>

    <!-- Outline Button - Matching web btn-outline style -->
    <!-- Outline Button - Matching web btn-outline style -->
    <style name="Widget.AuthApp.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/brand_maroon</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="strokeColor">@color/brand_maroon</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <!-- Text Styles matching web typography -->
    <style name="TextStyle.Heading" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/brand_navy</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextStyle.Label" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/brand_navy</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextStyle.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/brand_navy</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.Error" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/brand_maroon</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>
