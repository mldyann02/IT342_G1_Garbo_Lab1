<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#202C59" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <!-- Main button layer offset for shadow effect -->
            <item android:bottom="6dp" android:left="0dp" android:right="6dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/brand_maroon" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
