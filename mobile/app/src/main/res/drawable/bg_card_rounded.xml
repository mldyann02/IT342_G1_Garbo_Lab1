<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer - matching web shadow-[8px_8px_0px_0px_#202C59] -->
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#202C59" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Border and background layer -->
    <item android:bottom="8dp" android:left="0dp" android:right="8dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <stroke android:width="2dp" android:color="@color/brand_navy" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
