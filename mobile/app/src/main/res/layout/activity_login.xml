<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Geometric decorative shapes - matching web design -->
    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_decorative_yellow" />

    <View
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_decorative_terracotta" />

    <!-- Centered content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Spacer for decorative element -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Main Card - matching web card style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_rounded"
            android:padding="24dp">

            <!-- Heading - matching web h2 style -->
            <TextView
                android:id="@+id/tvLoginTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/brand_navy"
                android:textSize="32sp"
                android:fontFamily="sans-serif-black"
                android:textAllCaps="true"
                android:letterSpacing="-0.02"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <!-- Welcome Message - matching web p style -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome back! Please enter your credentials."
                android:textColor="@color/brand_navy"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="24dp"
                android:lineSpacingMultiplier="1.2" />

            <!-- Error Message Container -->
            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brand_maroon"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="sans-serif-black"
                android:textAllCaps="true"
                android:gravity="center"
                android:visibility="gone" />

            <!-- Email Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/brand_navy"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-black"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="your@email.com"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/bg_input_outline"
                    android:padding="14dp"
                    android:textColor="@color/brand_navy"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColorHint="#9CA3AF" />
            </LinearLayout>

            <!-- Password Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/brand_navy"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-black"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="••••••••"
                        android:inputType="textPassword"
                        android:background="@drawable/bg_input_outline"
                        android:padding="14dp"
                        android:paddingEnd="48dp"
                        android:textColor="@color/brand_navy"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColorHint="#9CA3AF" />

                    <ImageButton
                        android:id="@+id/btnTogglePassword"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="end|center_vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_visibility_off"
                        android:contentDescription="Toggle password visibility"
                        android:padding="12dp"
                        app:tint="@color/brand_navy" />
                </FrameLayout>
            </LinearLayout>

            <!-- Login Button - matching web btn-enroll style -->
            <Button
                android:id="@+id/btnLogin"
                style="@style/Widget.AuthApp.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:layout_marginTop="4dp" />

            <!-- Register Link - matching web style -->
            <TextView
                android:id="@+id/tvRegisterLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't have an account? Register"
                android:textColor="@color/brand_navy"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Bottom spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</FrameLayout>
