<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvRegisterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Account"
            android:textColor="@color/brand_navy"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_rounded"
            android:padding="18dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp">

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:inputType="textPersonName"
                android:background="@drawable/bg_input_outline"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/brand_navy"
                android:textColorHint="#9CA3AF" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:inputType="textPersonName"
                android:background="@drawable/bg_input_outline"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/brand_navy"
                android:textColorHint="#9CA3AF" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_input_outline"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/brand_navy"
                android:textColorHint="#9CA3AF" />

            <!-- Gender selection to match web register -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/brand_navy"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp" />

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/brand_navy" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/brand_navy" />

                <RadioButton
                    android:id="@+id/rbOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/brand_navy" />

            </RadioGroup>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/design_password_eye"
                android:drawablePadding="8dp"
                android:paddingEnd="40dp"
                android:background="@drawable/bg_input_outline"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/brand_navy"
                android:textColorHint="#9CA3AF" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/design_password_eye"
                android:drawablePadding="8dp"
                android:paddingEnd="40dp"
                android:background="@drawable/bg_input_outline"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/brand_navy"
                android:textColorHint="#9CA3AF" />

            <!-- Inline validation checklist (mirrors web rules) -->
            <LinearLayout
                android:id="@+id/validationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                android:background="#F3F4F6">

                <TextView
                    android:id="@+id/tvRuleLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 8+ Characters"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/tvRuleUpper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Capital Letter"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/tvRuleNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Contains Number"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/tvRuleSpecial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Special Character"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/tvRuleMatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Passwords Match"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnRegister"
                style="@style/Widget.AuthApp.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete Registration"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/tvLoginLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account? Log in here"
                android:textColor="@color/brand_navy"
                android:gravity="center"
                android:layout_marginTop="12dp"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>