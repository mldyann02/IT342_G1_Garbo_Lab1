<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Identity Block - matching web terracotta side block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/brand_terracotta"
                android:padding="24dp"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- User Initials Avatar - matching web white border -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_avatar_white_border"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvInitials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/brand_navy"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-black" />
                </FrameLayout>

                <!-- Full Name - matching web heading style -->
                <TextView
                    android:id="@+id/tvFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-black"
                    android:textAllCaps="true"
                    android:letterSpacing="-0.02"
                    android:gravity="center" />
            </LinearLayout>

            <!-- User Profile Section - matching web heading style -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Profile"
                android:textColor="@color/brand_maroon"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:textAllCaps="true"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp" />

            <!-- Email Card - matching web card style -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_rounded"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <!-- Yellow icon background -->
                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@color/brand_yellow">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="âœ‰"
                        android:textSize="20sp"
                        android:textColor="@color/brand_navy" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/text_gray"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-black"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/brand_navy"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Gender Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_rounded"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <!-- Navy icon background -->
                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@color/brand_navy">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ðŸ‘¤"
                        android:textSize="20sp"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="@color/text_gray"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-black"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/brand_navy"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:capitalize="words"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Logout Button - matching web style -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout Session"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.05"
                android:paddingVertical="14dp"
                android:background="@drawable/bg_btn_logout" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
